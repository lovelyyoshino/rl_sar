<launch>
    <arg name="wname" default="stairs"/>
    <arg name="rname" default=""/>
    <param name="robot_name" type="str" value="$(arg rname)"/>
    <param name="ros_namespace" type="str" value="/$(arg rname)_gazebo/"/>
    <param name="gazebo_model_name" type="str" value="$(arg rname)_gazebo"/>
    <arg name="robot_path" value="(find $(arg rname)_description)"/>
    <arg name="dollar" value="$"/>

    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>
    <!-- Debug mode will hung up the robot, use "true" or "false" to switch it. -->
    <arg name="user_debug" default="false"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find rl_sar)/worlds/$(arg wname).world"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="headless" value="$(arg headless)"/>
    </include>

    <!-- Load the URDF into the ROS Parameter Server -->
    <param name="robot_description"
           command="$(find xacro)/xacro --inorder '$(arg dollar)$(arg robot_path)/xacro/robot.xacro'
           DEBUG:=$(arg user_debug)"/>

    <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
    <!-- Set trunk and joint positions at startup -->
    <!-- Default spawn args (no initial joint positions) -->
    <arg name="spawn_args" default="-urdf -z 1.0 -model $(arg rname)_gazebo -param robot_description"/>

    <!-- D1 robot: spawn with initial joint positions to prevent falling -->
    <group if="$(eval arg('rname') == 'd1')">
        <node pkg="gazebo_ros" type="spawn_model" name="urdf_spawner" respawn="false" output="screen"
              args="-urdf -z 0.5 -model $(arg rname)_gazebo -param robot_description
                    -J FR_ABAD_JOINT 0.0 -J FR_HIP_JOINT 0.8 -J FR_KNEE_JOINT -1.5
                    -J FL_ABAD_JOINT 0.0 -J FL_HIP_JOINT 0.8 -J FL_KNEE_JOINT -1.5
                    -J RR_ABAD_JOINT 0.0 -J RR_HIP_JOINT 0.8 -J RR_KNEE_JOINT -1.5
                    -J RL_ABAD_JOINT 0.0 -J RL_HIP_JOINT 0.8 -J RL_KNEE_JOINT -1.5"/>
    </group>

    <!-- Other robots: spawn without initial joint positions -->
    <group unless="$(eval arg('rname') == 'd1')">
        <node pkg="gazebo_ros" type="spawn_model" name="urdf_spawner" respawn="false" output="screen"
              args="$(arg spawn_args)"/>
    </group>

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(arg dollar)$(arg robot_path)/config/robot_control.yaml" command="load"/>

    <!-- convert joint states to TF transforms for rviz, etc -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"
          respawn="false" output="screen">
        <remap from="/joint_states" to="/$(arg rname)_gazebo/joint_states"/>
    </node>

    <!-- Load joy node -->
    <node pkg="joy" type="joy_node" name="joy_node" output="screen"/>

</launch>
